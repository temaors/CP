        <Button Content="Удалить тренера" HorizontalAlignment="Left" Margin="424,345,0,0" VerticalAlignment="Top" Width="270" Height="28" Click="Button_Click"/>
        <Button x:Name="RefreshDel" Content="Обновить" HorizontalAlignment="Left" Margin="718,10,0,0" VerticalAlignment="Top" Width="120" Click="RefreshDel_Click"/>
        <Label x:Name="DelClLabel" Content="" HorizontalAlignment="Left" Height="31" Margin="18,393,0,0" VerticalAlignment="Top" Width="453"/>

    </Grid>
</Window>
